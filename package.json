{
    "name": "@hanreev/types-ol",
    "version": "3.0.0-beta.0",
    "description": "OpenLayers 6+ TypeScript declaration",
    "author": "Rifa'i M. Hanif <hanreev@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/hanreev/types-ol.git"
    },
    "bugs": {
        "url": "https://github.com/hanreev/types-ol/issues"
    },
    "homepage": "https://github.com/hanreev/types-ol",
    "keywords": [
        "openlayers",
        "ol",
        "typescript",
        "declaration"
    ],
    "license": "MIT",
    "scripts": {
        "build": "jsdoc -c jsdoc/conf.json -P openlayers/package.json -d @types",
        "format": "prettier --write prettier --write \"@types/**/*.ts\"",
        "lint": "tsc -p tsconfig.lint.json --pretty && tslint -p tsconfig.lint.json",
        "build-format": "npm run build && npm run format",
        "format-test": "prettier --write prettier --write \"test/**/*.ts\"",
        "lint-test": "tsc -p tsconfig.test.json --pretty && tslint -p tsconfig.test.json",
        "test": "webpack --progress --color",
        "prepare-npm": "node prepareNpm.js",
        "prepare-dt": "node prepareDefinitelyTyped.js"
    },
    "dependencies": {
        "@types/arcgis-rest-api": "^10.4.4",
        "@types/geojson": "^7946.0.7",
        "@types/pbf": "^3.0.1",
        "@types/topojson-specification": "^1.0.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/node": "^10.14.10",
        "@types/proj4": "^2.5.0",
        "dtslint": "^0.8.0",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.0",
        "jsdoc": "3.5.5",
        "jsdoc-plugin-typescript": "^1.0.8",
        "ol": "^6.0.0-beta.11",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1",
        "proj4": "^2.5.0",
        "ts-loader": "^6.0.4",
        "tslint": "^5.18.0",
        "typescript": "^3.5.2",
        "webpack": "^4.35.2",
        "webpack-cli": "^3.3.5"
    },
    "files": [
        "ol"
    ],
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    }
}
